# EditorConfig helps maintain consistent coding styles across editors and IDEs
# https://editorconfig.org/

root = true

# ─────────────────────────────
# Default configuration (all files)
# ─────────────────────────────
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# --- Indentation ---
indent_style = space
indent_size = 4

# --- Line length ---
max_line_length = 79

# --- File format ---
quote_type = double

# --- Compatibility ---
# Aligns with Ruff, Black, and isort
ij_python_line_separator = \n
ij_python_use_double_quotes = true

# ─────────────────────────────
# Python files
# ─────────────────────────────
[*.py]
indent_style = space
indent_size = 4
max_line_length = 79
insert_final_newline = true
trim_trailing_whitespace = true

# Match Black, Ruff, isort
quote_type = double
python_variant = 3.12
charset = utf-8

# ─────────────────────────────
# YAML / TOML / JSON / MD
# ─────────────────────────────
[*.{yml,yaml,toml,json,md}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# ─────────────────────────────
# Makefile
# ─────────────────────────────
[Makefile]
indent_style = tab

# ─────────────────────────────
# ReStructuredText / RST
# ─────────────────────────────
[*.rst]
indent_style = space
indent_size = 3
trim_trailing_whitespace = true
insert_final_newline = true

# ─────────────────────────────
# Markdown
# ─────────────────────────────
[*.md]
trim_trailing_whitespace = false  # Keep intentional double spaces
insert_final_newline = true
